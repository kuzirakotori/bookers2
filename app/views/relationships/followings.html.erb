<div class="col-md-8 offset-md-1">
  <h2>Follow Users</h2>
  <% if @users.none? %>
    <p>ユーザーがいません</p>
  <% else %>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
          <th colspan="5"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th><%= image_tag user.get_profile_image(80,80), class: "image-icon" %></th>
            <th><%= user.name %></th>
            <th>フォロー数:<%= user.followings.count %></th>
            <th>フォロワー数:<%= user.followers.count %></th>
            <th><%= link_to "Show",user_path(user.id) %></th>
            <th colspan="5"></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
