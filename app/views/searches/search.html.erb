<h2><%= @range %> search for "<%= @word %>"</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th>introduction</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(80,80) %></td>
          <td><%= link_to user.name,user_path(user) %></td>
          <td><%= user.introduction %></td>
          <td colspan="3"></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(80,80) %></td>
          <td><%= link_to book.title,book_path(book) %></td>
          <td><%= book.body %></td>
          <td colspan="3"></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>