<table>
    <% book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= link_to book_path(books) do %>
            <%= image_tag(user.get_profile_image(60,60)) %><br>
            <%= user.name %>
          <% end %>
        </td>
        <td>
          <%= book_comment.comment %>
        </td>
        <td>
          <%= link_to "Destroy",book_book_comment_path(books,book_comment),method: :delete,remote: true,class: "btn btn-sm btn-danger destroy_book_11038" %>
        </td>
      </tr>
    <% end %>
</table>
