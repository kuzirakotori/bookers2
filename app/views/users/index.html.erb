  <div class="container px-5 px-sm-0">
    <div class="row">

      <%= render 'form', user: @user,book: @book %>   <!--form共有部分-->

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
              <th colspan="6"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <th><%= image_tag user.get_profile_image(80,80), class: "image-icon" %></th>
                <th><%= user.name %></th>
                <th>フォロー数:<%= user.followings.count %></th>
                <th>フォロワー数:<%= user.followers.count %></th>
                <th>
                  <% if user.id==current_user.id %>
                  <% else %>
                    <% if current_user.following?(user) %>
                      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete,class: "btn btn-info" %>
                    <% else %>
                      <%= link_to "フォローする", user_relationships_path(user.id), method: :post,class: "btn btn-success" %>
                    <% end %>
                  <% end %>
                </th>
                <th><%= link_to "Show",user_path(user.id) %></th>
                <th colspan="6"></th>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>

