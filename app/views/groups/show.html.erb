<main>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <%= render 'users/form', user: @user,book: @book %>   <!--form共有部分-->

      <div class="col-md-8 offset-md-1">
        <h2>Book Detail</h2>
        <table class="table">
          <tbody>
            <tr>
                <td>
                  <%= link_to group_path(@group.id) do %>
                    <%= image_tag @group.get_group_image(80,80) %><br>
                  <% end %>
                </td>
                <td><%= @group.name %></td>
                <td><%= @group.introduction %></td>
                <!--編集ボタン（オーナーのみ表示）-->
                <% if @group.owner_id == current_user.id %>
                  <td><%= link_to "Edit",edit_group_path(@group.id),class: "btn btn-sm btn-success edit_book_11021" %></td>
                <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

