<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Create Group</h2>
        <div id="error_explanation">
          <% if @group.errors.any? %>
            <h3><%= @group.errors.count %>error prohibited this obj from being saved: </h3>
            <ul>
              <% @group.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <%= form_with model:@group do |f| %>
          <div class="form-group">
            グループ名<br />
            <%= f.text_field :name,class:"form-control name" %>
          </div>
          <div class="form-group">
            紹介文<br />
            <%= f.text_area :introduction,class:"form-control introduction" %>
          </div>
          <div class="form-group">
            グループ画像<br />
            <%= f.file_field :group_image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.submit "Create Group",class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

